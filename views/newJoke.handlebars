<div class="card">
  <div class="card-header">
    <h2 style="color:#065b83">Welcome, {{username}}!</h2>

  </div>
  <form class="card-body" id="new-joke-form">
    <label for="joke-content" class="form-label" style="color:#065b83">Create a New Joke:</label>
    <input class="form-input" type="text" id="joke-content" name="joke-content"/>
     
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
      <div class="form-group col-md-4">
      <label for="inputState">State</label>
      <select id="inputState" class="form-control">
        <option selected>Choose...</option>
        <option value="Food">Food</option>
        <option data-category="2" value="Developer">Developer</option>
        <option data-category="3" value="Weird">Weird</option>
        <option data-category="4" value="Old">Old</option>
        <option data-category="5" value="Cool">Cool</option>
        <option data-category="6" value="Dad Jokes">Dad Jokes</option>
      </select>
    </div>
</div>
<script src="/js/newJoke.js"></script>
